# Qapish AI Colocation Platform - Environment Configuration
# Copy this file to ~/.config/qapish/api.env for Quadlet deployment
# Or to .env for local development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/qapish

# API Server Configuration
PORT=8080
RUST_LOG=info,tower_http=debug,sqlx=warn

# Security Settings
# JWT_SECRET=your-secret-key-here
# CORS_ORIGINS=https://your-frontend-domain.com

# Infrastructure Settings
# INFRA_PROVIDER=local
# INFRA_CONFIG_PATH=/config/infra.yaml

# Monitoring & Observability
# METRICS_ENABLED=true
# TRACING_ENDPOINT=http://jaeger:14268/api/traces
# HEALTH_CHECK_INTERVAL=30

# Container-specific settings (for Quadlet deployment)
# These are used when running with systemd + Quadlet
CONTAINER_DATABASE_URL=postgresql://postgres:password@qapish-postgres:5432/qapish
CONTAINER_NETWORK=qapish-net

# Development overrides
# DEMO_MODE=false
# DEV_CORS_ALLOW_ALL=false
